<%= simple_form_for(customer) do |f| %>
<div class="flex flex-wrap">
	<div class="w-1/12 lg:hidden xl:flex">
	</div>
	<div class="w-full lg:w-3/5 xl:w-2/5">
		<div class="w-full mt-8">
			<div class="w-full bg-white shadow-xl rounded px-8 pt-6 pb-8 mb-4">
				<div class="text-center">
					<h1 class="text-3xl font-medium text-blue-900 mt-2">
						Skapa en ny kund.
					</h1>
					<div class="w-1/4 mt-6 mx-auto">
						<%= image_tag('no_users.svg')%>
					</div>
				</div>
				<div class="mt-4 mb-4">
					<label class="text-gray-800 text-lg font-medium" for="name">
					<%= t('.name') %>
					</label>
					<%= f.input(:name, input_html: { autofocus: true }, label:false) %>
				</div>
				<div class="mb-4">
					<label class="text-gray-800 text-lg font-medium">
						<%= t('.phone') %>
					</label>
					<%= f.input(:phone, label:false) %>
				</div>
				<div class="flex flex-wrap -mx-2">
					<div class="w-3/4 mb-4 px-2">
						<label class="text-gray-800 text-lg font-medium">
							<%= t('.address') %>
						</label>
						<%= f.input(:address, label:false) %>
					</div>
					<div class="w-1/4 mb-4 px-2">
						<label class="text-gray-800 text-lg font-medium">
							<%= t('.zip_code') %>
						</label>
						<input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="111 11">
					</div>
				</div>
				<div class="flex -mx-2">
					<div class="w-1/2 mb-4 px-2">
						<label class="text-gray-800 text-lg font-medium">
							<%= t('.city') %>
						</label>
						<input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Storstaden">
					</div>
					<div class="w-1/2 mb-4 px-2">
						<label class="text-gray-800 text-lg font-medium">
							<%= t('.country') %>
						</label>
						<input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Sverige">
					</div>
				</div>
				<div class="mb-6">
					<label class="text-gray-800 text-lg font-medium">
						<%= t('.email') %>
					</label>
					<%= f.input(:email, label:false) %>
				</div>
				<div class="mt-8 mb-8">
				<div class="w-1/2 mx-auto flex">
					<div class="mt-2 ml-4">
						<input type="radio" name="customer_type" value="person"><p class="text-sm font-semibold inline">Privatperson</p>
					</div>
					<div class="mt-2 ml-8">
						<form>
							<input type="radio" name="customer_type" value="company"><p class="text-sm font-semibold inline">FÃ¶retag</p>
						</form>
					</div>
					</div>
				</div>
				<div class="flex items-center justify-center">
						<div class="">
								<%= bulma_button(f) %>
							</div>
							<div class="ml-2">
								<%= link_to('/account', class: 'button is-grey font-medium') do %>
									<%= t('.cancel') %>
								<% end %>
							</div>
					</button>
				</div>
			</div>
		</div>
	</div>
	<div class="w-1/6 lg:hidden xl:flex">
	</div>
	<div class="w-1/12 hidden lg:flex xl:hidden">
	</div>
	<div class="w-full lg:w-1/4">
		<div class="w-full bg-white shadow-xl rounded px-8 pt-6 pb-8 mb-4 mt-8">
			<div class="text-center">
				<h1 class="text-2xl font-medium text-blue-900 mt-2">
					Senast tillagda kunder.
				</h1>
				<div class="h-64">
				</div>
				<div class="h-64">
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>
