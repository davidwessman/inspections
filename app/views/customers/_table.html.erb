<% headline ||= nil %>
<% if headline.present? %>
  <h4 class="subtitle"><%= headline %></h4>
<% end %>
<% if customers.any? %>
	<table class="table is-striped is-fullwidth">
		<thead>
		<tr>
			<td class="bold"> <%= Customer.human_attribute_name(:name) %></td>
			<td> <%= Customer.human_attribute_name(:phone) %></td>
			<td> <%= Customer.human_attribute_name(:address) %></td>
			<td> <%= Customer.human_attribute_name(:email) %></td>
		</tr>
		</thead>
		<tbody>
		<% customers.each do |c| %>
			<tr>
			<td> <%= link_to(c.name, c) %> </td>
			<td> <%= c.phone %> </td>
			<td> <%= c.address %> </td>
			<td> <%= c.email %> </td>
			</tr>
		<% end %>
		</tbody>
	</table>
<% else %>
	<div class="w-1/3 mx-auto mb-8">
		<div class="w-full mx-auto mt-12">
			<%= image_tag('no_users.svg')%>
		</div>
		<div class="w-5/6 mx-auto">
		<% unless current_page?('/customers') %>
			<p class="text-sm font-semibold text-blue-900 text-center mt-8">Inga kunder!</p>
			<p class="text-sm text-blue-900 text-center mt-1 mb-8">Klicka <a href="/customers/new" class="text-blue-700">här</a> för att skapa din första kund.</p>			
		<% end %>
		<% unless current_page?('/account') %>
			<p class="text-2xl font-semibold text-blue-900 text-center mt-8">Inga kunder!</p>
			<p class="text-md text-blue-900 text-center mt-1 mb-8">Klicka <a href="/customers/new" class="text-blue-700">här</a> för att skapa din första kund.</p>			
		<% end %>		
		</div>	
	</div>	
<% end %>