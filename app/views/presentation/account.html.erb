<% content_for(:sidemenu) do %>
  <%= render('panel', active: :index) %>
  <%= render('shortcuts', active: @status) %>
<% end %>
<div class="w-full">
	<div class="flex flex-wrap -mt-4">
		<div class="w-full md:w-2/3 px-2 mb-6">
			<div class="flex">
				<div class="w-20">  
					<%= image_tag('profile_pic.svg')%>
				</div>	
				<div class="w-2/3 ml-4 mt-2">
					<h1 class="text-3xl font-sans font-bold text-blue-900">VÃ¤lkommen,<p class="-mt-3"> <%= current_user.name %>!</p></h1>
				</div>
			</div>                 
		</div>
		<div class="w-full md:w-1/3 px-2 flex">
			<div class="w-2/3">
			</div>
			<div class="w-full flex">
				<div class="w-1/2 ml-8">
					<p class="control mt-3">
						<a href="/projects/new" class="button is-success">
							<%= icon('fas', 'plus', class: 'mr-2') %>
							Nytt projekt
						</a>
					</p>
				</div>
				<div class="w-1/2 ml-2">	
					<p class="control mt-3">
						<a href="/customers/new" class="button is-primary">
							<%= icon('fas', 'plus', class: 'mr-2') %>
							Ny kund
						</a>
					</p>  
				</div>				                  
			</div>	      
		</div>
	</div>

	<div class="w-full border-t border-gray-500 px-2">
		<div class="flex flex-wrap mt-8 -mx-2"> 
			<div class="w-full lg:w-1/2 bg-white shadow-xl rounded-lg overflow-auto px-2">	
				<div class="w-full border-b border-black p-2">
					<h1 class="text-lg font-semibold text-blue-900 ml-2"><i class="mr-2 far fa-sm fa-list-alt"></i>Aktiva projekt</h1>
				</div>	
				<div class="w-full">
					<%= render('projects/table', projects: @projects = Project.includes(:customer).active) %>				
				</div>
			</div>
			<div class="w-full lg:w-5/12 bg-white shadow-xl rounded-lg overflow-auto px-2 lg:ml-16 mt-8 lg:mt-0">	
				<div class="w-full border-b border-black p-2">
					<h1 class="text-lg font-semibold text-blue-900 ml-2"><i class="mr-2 far fa-sm fa-address-card"></i>Nya kunder</h1>
				</div>	
				<div class="w-full">
					<%= render('customers/table', customers: @customers) %>				
				</div>
			</div>							 
		</div>    
	</div>

	<div class="columns mt-64">
		<div class="column">
			<nav class="level is-mobile">
				<div class="level-item has-text-centered">
					<div>
						<p class="heading"><%= t('.active_projects') %></p>
						<p class="title"><%= @counts[:active] %></p>
					</div>
				</div>
				<div class="level-item has-text-centered">
					<div>
						<p class="heading"><%= t('.completed_projects') %></p>
						<p class="title"><%= @counts[:completed] %></p>
					</div>
				</div>
				<div class="level-item has-text-centered">
					<div>
						<p class="heading"><%= t('.total_project_count') %></p>
						<p class="title"><%= @counts[:total] %></p>
					</div>
				</div>
				<div class="level-item has-text-centered">
					<div>
						<p class="heading"><%= t('.logged_time_entries') %></p>
						<p class="title">789</p>
					</div>
				</div>
			</nav>
		</div>
	</div>
</div>