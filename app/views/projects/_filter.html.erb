<p class="menu-label">
  <%= t('.filter') %>
</p>
<ul class="menu-list">
  <%= active_menu(projects_path(status: :active), active, 'active') do %>
    <%= fa_icon('play') %>
    <%= t('models.project.status.active') %>
  <% end %>

  <%= active_menu(projects_path(status: :paused), active, 'paused') do %>
    <%= fa_icon('pause') %>
    <%= t('models.project.status.paused') %>
  <% end %>

  <%= active_menu(projects_path(status: :completed), active, 'completed') do %>
    <%= fa_icon('check') %>
    <%= t('models.project.status.completed') %>
  <% end %>

  <%= active_menu(projects_path(status: :cancelled), active, 'cancelled') do %>
    <%= fa_icon('stop') %>
    <%= t('models.project.status.cancelled') %>
  <% end %>

  <% if active.present? %>
    <%= active_menu(projects_path, active, 'skip') do %>
      <%= fa_icon('ban') %>
      <%= t('.unfiltered') %>
    <% end %>
  <% end %>
</ul>
