<% content_for(:sidemenu) do %>
	<%= render('panel', active: :index, project: @project) %>
  	<%= render('filter', active: @status) %>
<% end %>

<div class="flex flex-wrap -mt-6 border-b border-black">
    <div class="w-1/2 lg:w-1/3 px-2 mt-2">
		<div class="w-full">
			<h1 class="text-4xl font-medium text-blue-900"><%= t('.title') %></h1>
		</div>
	</div>
	<div class="flex-grow">
	</div>
	<div class="w-1/4 md:w-1/5">
			<%= image_tag('projects.svg', :class => "h-32")%>
	</div>
	<div class="w-full -mt-12 ml-2">
		<%= render('/searches/form', target: :project) %>
	</div>
</div>

<div class="bg-white mt-8">
	<%= render('table', projects: @projects) %>
</div>
