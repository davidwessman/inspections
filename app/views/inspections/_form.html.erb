<%= form_for(inspection) do |f| %>
  <%= bulma_field(f, :customer, kind: :text) %>
  <%= bulma_field(f, :customer, kind: :select, options: options_from_collection_for_select(Customer.all, 'id', 'name', selected: inspection.customer)) %>

  <%= bulma_field(f, :on, kind: :date) %>
  <%= bulma_button(f) %>
<% end %>

<%= javascript_pack_tag('forms') %>
<%= stylesheet_pack_tag('forms') %>
